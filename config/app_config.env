# Kafka Configuration
KAFKA_BROKERS=localhost:9092,localhost:9093,localhost:9094
KAFKA_REPLICATION_FACTOR=3
KAFKA_MIN_INSYNC_REPLICAS=2

# Elasticsearch Configuration  
ELASTICSEARCH_HOST=localhost:9200
ELASTICSEARCH_INDEX=products

# Spark Configuration
SPARK_MASTER=spark://localhost:7077
SPARK_DRIVER_MEMORY=2g
SPARK_EXECUTOR_MEMORY=2g

# Monitoring Configuration
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=grafana

# Application Configuration
LOG_LEVEL=INFO
DATA_DIR=./data
OUTPUT_DIR=./data/output

# File Paths
PRODUCTS_FILE=data/products.json
BANNED_PRODUCTS_FILE=data/banned_products.json

# Kafka Topics
SHOP_PRODUCTS_TOPIC=shop-products
FILTERED_PRODUCTS_TOPIC=filtered-products
CLIENT_SEARCHES_TOPIC=client-searches
RECOMMENDATIONS_TOPIC=client-recommendations
RECOMMENDATIONS_RESULT_TOPIC=recommendations-results

# Processing Configuration
STREAM_PROCESSING_INTERVAL=10s
ANALYTICS_BATCH_INTERVAL=30s
RECOMMENDATION_TIMEOUT=30s 